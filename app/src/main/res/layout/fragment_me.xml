<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:padding="20dp">

        <ImageView
            android:id="@+id/my_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zuozhu" />

    <RelativeLayout
        android:id="@+id/mine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/my_photo"
        android:background="#ffffff"
        android:padding="10dp">

        <TextView
            android:id="@+id/my_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_yonghuID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_name"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="贰货号"
            android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/my_xiugaiziliaoGO"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/mine"
            android:layout_marginLeft="135dp"
            android:layout_centerVertical="true"
            android:background="@drawable/right65" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_tongzhi"
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看通知"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_tongzhiGO"
            android:layout_marginLeft="295dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_shadow" />

    <LinearLayout
        android:id="@+id/my_jiaoyijilu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看交易记录"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_jiaoyijiluGO"
            android:layout_marginLeft="263dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_shadow" />

    <LinearLayout
        android:id="@+id/my_sellCommodity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的出售商品"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_sellCommodityGO"
            android:layout_marginLeft="263dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_shadow" />

    <LinearLayout
        android:id="@+id/my_requireCommodity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的求购商品"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_requireCommodityGO"
            android:layout_marginLeft="263dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bottom_shadow" />

    <LinearLayout
        android:id="@+id/my_favorite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏夹"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_favoriteGO"
            android:layout_marginLeft="279dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LogOut"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:padding="5dp"

        >
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登出"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/my_LogOutGO"
            android:layout_marginLeft="327dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/right65"

            />

    </LinearLayout>


</LinearLayout>