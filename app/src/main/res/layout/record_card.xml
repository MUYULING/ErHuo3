<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/record_buyername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/record_ownername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_buyername"
            android:textColor="#222222"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/record_comname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_ownername"
            android:textColor="#222222"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#757575"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/record_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/record_date"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#757575"
            android:textSize="16sp" />

        <Button
            android:id="@+id/com_home_record_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/com_home_record_decline"
            android:layout_alignBottom="@+id/com_home_record_decline"
            android:layout_toStartOf="@+id/com_home_record_decline"
            android:clickable="true"
            android:text="已完成"
            android:textColor="#59B29C"
            android:textSize="16sp" />

        <Button
            android:id="@+id/com_home_record_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/record_comname"
            android:clickable="true"
            android:text="已取消"
            android:textColor="#59B29C"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
