<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/com_home_itemcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/com_image"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/com_home_itemcard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:textColor="#222222"/>

            <TextView
                android:id="@+id/com_home_itemcard_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/com_home_itemcard_name"
                android:layout_below="@+id/com_home_itemcard_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/com_home_itemcard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/com_home_itemcard_des"
                android:textColor="#FF0033"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/com_home_itemcard_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/com_home_itemcard_up_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/com_home_itemcard_tag"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/com_home_itemcard_down_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/com_home_itemcard_up_time"
                android:textColor="#999999"/>

            <Button
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="@string/see"
                android:textColor="@color/colorDefault" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
